<%- include('partials/head', { title: item.title }) %>
<section class="container">
  <div class="grid-2">
    <div>
      <img class="detail-hero" src="<%= item.hero %>" alt="<%= item.title %>">
    </div>
    <div>
      <h1><%= item.title %></h1>
      <p><%= item.summary %></p>
      <h3>Key Features</h3>
      <ul>
        <% item.features.forEach(f => { %>
          <li><%= f %></li>
        <% }) %>
      </ul>
      <a href="/contact" class="btn">Request Quote</a>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
